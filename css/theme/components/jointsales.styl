.jointsales
    .owl-wrapper-outer
        border: 0

    .jointsales__currentin .title, .jointsales__item .title
        font-size: 12px
        font-weight: medium
        color: color2_bg

    .price
        color: color1_bg

    .more
        width: 36px
        height: 36px
        background: color1_bg
        color: #fff
        line-height: 1
        transform: none
        display: flex
        justify-content: center
        align-items: center
        border-radius: 5px
        font-weight: 300
        font-size: 20px

        &:before
            display: none

        &:after
            content: '+'

    &__currentin, &__item
        display: block
        padding: 16px 0 30px
        box-shadow: none

        .price-box
            display: none

        select
            box-shadow: none
            appearance: none
            background: #f7f7f7
            height: 40px
            padding: 0 20px
            border: 0
            font-size: 12px
            color: #3c3733
            padding-right: 40px

    &__options
        margin: 0 0 16px

        label
            font-size: 11px
            font-weight: medium

        li
            position: relative
            padding: 16px 0 0
            flex: 0 0 100%

            &:after
                content: ''
                position: absolute
                bottom: 15px
                right: 1rem
                border-left: solid 5px transparent
                border-right: solid 5px transparent
                border-top: solid 5px #ff5d00
                transform: translateY(-50%)

    &__totals .economize, .parcelamento .s-juros
        background: color2_bg

    &__row
        padding: 0

    &__current
        margin-bottom: 30px

    .btn-jointsales
        font-size: 16px
        font-weight: semibold
        color: #fff
        background: #59e874
        border: 0
        box-shadow: none
        height: 60px

        &:hover
            background: darken(#59e874, 20%)
            color: #fff

@media (min-width: 993px)
    .jointsales
        &__title
            display: flex
            align-items: center
            justify-content: flex-start
            font-size: 16px
            font-weight: semibold
            background: color1_bg
            color: #fff !important
            height: 60px
            box-shadow: 800px 0 0 color1_bg, -800px 0 0 color1_bg

        &__currentin
            padding-right: 30px

        &__currentin, &__item
            img
                width: 260px
                height: 260px
                object-fit: contain

        &__current
            margin-bottom: 0
            padding-bottom: 0

            + .jointsales__list
                justify-content: flex-start
                flex: 1
                min-width: 50%

        &__row
            justify-content: flex-start

        &__item
            flex: 0 1 320px
            min-width: 0
            max-width: none
            padding: 0 30px 0

        &__totals, &__payments, &__action
            flex: 0 0 33.333%