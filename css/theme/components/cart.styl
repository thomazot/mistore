.checkout-cart-index
    .header-container
        border-bottom: solid 1px #ebebeb

    .page-title h1
        font-size: 20px
        font-weight: bold

.cart-table
    .qty-wrapper
        min-width: 66px

    .btn-remove:before
        content: ''
        background: url('data:image/jpeg;base64,') no-repeat
        width: 18px
        height: 18px

    h2.name a
        font-size: 14px
        font-weight: regular
        color: #3c3733

    .sku
        font-size: 12px

    .item-options
        dt, dd
            font-size: 11px

    header
        background: #fff
        border-top: solid 1px #ebebeb
        border-left: solid 1px #ebebeb
        border-right: solid 1px #ebebeb

    .th
        font-size: 14px
        font-weight: regular
        color: #3c3733

    main
        border-top: 0

    .cart-product-line
        border-top: solid 1px #ebebeb
        margin: 0 16px 16px

        .price
            font-size: 14px
            font-weight: semibold

.crosssell
    margin-top: 100px

    &__title
        font-size: 16px
        font-weight: semibold
        color: color1_bg

@media (min-width: 840px)
    .shipping, .coupon
        box-shadow: none

    .coupon
        padding-top: 40px
        position: relative

        .title
            font-size: 14px
            font-weight: regular
            color: #000
            height: 42px
            display: flex
            justify-content: flex-start
            align-items: center

            &:before
                content: 'Possui um Cupom de Desconto? '

            &:after
                content: 'Clique aqui para inserir'
                font-weight: semibold
                color: color1_bg
                padding-left: 3px

            span
                display: none

            &:hover
                + .coupon__form
                    visibility: visible
                    opacity: 1

        &__form
            position: absolute
            visibility: hidden
            opacity: 0
            transition: all 0.2s ease
            top: 40px
            left: 16px
            right: 16px
            background: #fff

            &:hover
                visibility: visible
                opacity: 1

    .shipping
        padding-top: 40px

        .title
            display: none

        &__postcode
            label
                font-size: 0

                &:before
                    content: 'Simule seu Frete'
                    font-size: 14px
                    font-weight: semibold
                    color: #3b3732

            .input-box input
                box-shadow: none
                border: 0
                height: 42px
                background: #f7f7f7
                border-radius: 4px 0 0 4px

        &__action
            .btn
                background: #f7f7f7
                border-radius: 0 4px 4px 0
                height: 42px
                border: 0
                color: color1_bg
                box-shadow: none
                font-size: 12px
                font-weight: semibold

                &:hover
                    background: #f7f7f7
                    color: color1_bg

    .cart
        .btn--outline
            box-shadow: none
            font-size: 14px
            font-weight: semibold
            color: #9d9d9d
            text-align: left
            padding-left: 0

            &:hover
                background: none
                color: color1_bg

        .btn-checkout
            background: #59e874
            font-size: 18px
            font-weight: semibold
            box-shadow: none
            height: 60px
            padding-left: 30px
            padding-right: 30px

            &:hover
                background: darken(#59e874, 20%)

        &-table
            footer
                display: none

        .totals
            flex: 0 0 100%
            padding: 0
            margin-top: 2px

            > .title
                display: none

            &__content
                margin: 0

        .totals__table
            display: flex
            justify-content: space-between

            td
                padding: 30px 16px

            tbody
                display: block
                border-right: solid 1px #ebebeb
                flex: 1 1 50%

                td
                    font-size: 14px
                    font-weight: regular
                    color: #000

            tfoot
                display: block
                flex: 1 1 50%

                td
                    font-size: 14px
                    font-weight: bold
                    color: #000

                    &:last-child
                        color: color1_bg

            tbody, tfoot
                tr
                    display: flex
                    justify-content: space-between
