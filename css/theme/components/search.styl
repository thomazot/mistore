.search
    &__button
        display: flex
        justify-content: center
        align-items: center
        width: 48px
        height: 48px
        padding: 0
        background: #fff

        .ico
            fill: color1_bg
            width: 11px
            height: 11px

        &:hover
            background: #fff

            .ico
                fill: color1_bg

@media (min-width: 569px)
    .search
        background: #fff
        border-radius: 4px
        box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.05)

        &__button
            box-shadow: none
            height: 32px
            width: 32px

        &__input
            box-shadow: none
            border: 0 !important
            height: 32px !important
            font-size: 12px

            &::placeholder
                color: rgba(0, 0, 0, 0.45)
                font-size: 10px

            &:focus::placeholder
                color: transparent

@media (min-width: 993px)
    .search
        max-width: 210px