.footer
    font-size: 12px
    font-weight: 400
    color: #fff
    padding: 30px 0 60px
    text-align: center

    .flex--a-center
        justify-content: center

    &__content
        p
            padding: 7px 0

    &__phone
        font-size: 14px
        margin-bottom: 5px

        strong
            font-size: 20px
            font-weight: semibold

        .ico
            width: 15px
            height: 15px
            fill: #fff
            margin-right: -4px

    .mymenu
        .a--0
            font-size: 12px
            font-weight: 300
            color: #fff

    &-container
        position: relative
        background: url(bg) repeat

        &:before
            content: ''
            position: absolute
            left: 0
            top: 0
            width: 100%
            height: 100%
            background: rgba(#0e0e0e, 0.98)

    &__title
        font-size: 16px
        font-weight: semibold
        color: color1_bg
        padding: 30px 0 20px

    .pays
        &__list
            margin: 0

        &__item
            height: 25px
            background: #fff
            margin-right: 4px !important
            border-radius: 4px
            display: flex
            justify-content: center
            align-items: center
            padding: 0 10px
            margin-bottom: 5px !important

        &__svg
            height: 15px

    .socials__svg
        height: 20px

.opc
    .footer
        display: flex
        justify-content: space-between
        flex-wrap: wrap

        h3
            color: color1_bg

        &__item
            flex: 0 0 100%
            min-width: 0

@media (min-width: 993px)
    .footer
        text-align: left

        .flex--a-center
            justify-content: flex-start

        &__container
            display: grid
            grid-template-areas: 'col1 col2 col3 col4' 'col5 col5 col6 col6'
            grid-template-columns: 1fr 1fr 1fr 1fr
            grid-gap: 20px

        &__item
            &:nth-child(1)
                grid-area: col1

            &:nth-child(2)
                grid-area: col2

            &:nth-child(3)
                grid-area: col3

            &:nth-child(4)
                grid-area: col4

            &:nth-child(5)
                grid-area: col5

            &:nth-child(6)
                grid-area: col6

    .opc
        .footer
            &__item
                flex: 0 0 auto