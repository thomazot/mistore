.products
    &__title
        font-size: 16px
        font-weight: semibold
        color: color1_bg

        span
            color: #c5c5c5

        .ico
            width: 26px
            height: 20px
            margin-right: 10px
            margin-bottom: -4px

    &__stock
        font-size: 11px
        font-weight: semibold
        padding-bottom: 5px
        margin-bottom: 5px
        opacity: 0

        span
            color: #333333

            &.qty
                color: color1_bg

        &.on
            opacity: 1

        .progress
            width: 100%
            height: 5px
            background: #ebebeb
            border-radius: 5px
            margin-top: 2px
            width: 100%
            max-width: 170px

            div
                background: color1_bg
                border-radius: 5px
                height: 100%

    &__case
        box-shadow: none
        border-radius: 4px
        background: #fff
        padding: 20px

    &__name
        font-size: 12px
        font-weight: medium
        line-height: 14px
        color: color2_bg
        height: 44px
        overflow: hidden

    .configurable-swatch-list
        a
            box-shadow: none

        img
            border-radius: 50%

    .owl-prev, .owl-next
        .ico
            fill: #d0d0d0

#products
    &--offer
        position: relative
        background: url(bg) repeat
        padding-bottom: 50px
        margin-bottom: 0 !important

        &:before
            content: ''
            position: absolute
            left: 0
            top: 0
            width: 100%
            height: 100%
            background: rgba(#ff6700, 0.95)

        .products
            &__title
                position: relative
                z-index: 2
                font-size: 20px
                color: #fff
                padding: 50px 0 30px

                span
                    color: color2_bg

        .owl-prev, .owl-next
            .ico
                fill: #000

@media (max-width: 992px)
    .products
        &__case
            text-align: center

            .configurable-swatch-list
                justify-content: center

        .products__stock
            .progress
                margin: 3px auto 5px

@media (min-width: 993px)
    .products
        .owl-pagination
            display: none

        &__item:hover
            .products__case
                box-shadow: inset 0 0 0 1px color1_bg

        &__main
            position: relative

        .product-rate
            margin-bottom: 5px
